 <form method="POST" action="/movies/create">

 <div class="form-group">
    <label for="title">Movie: </label>
    <input type="text" name="title" id="title" placeholder="Enter the title..."><br>
  </div>
  <div class="form-group">
    <label for="image">Image URL: </label>
    <input type="url" name="image" id="image" placeholder="Enter an image URL..."><br>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">Release</label>
    <input type="file" id="exampleInputFile">
    <p class="help-block">Example block-level help text here.</p>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Check it out
    </label>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>

</form>